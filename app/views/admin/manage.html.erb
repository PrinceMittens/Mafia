            <th>User Name</th>
            <th>Topic Name</th>
            <th>Prev. ID</th>
            <th>Next ID</th>
            <th>[x]</th>
        </tr>
        <% @all_player.each do |x| %>
        <tr>
            <td><%= x.id %></td>
            <td><%= User.find(x.user_id).name %></td>
            <td><%= Topic.find(x.topic_id).title %></td>
