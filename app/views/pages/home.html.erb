<div class="center jumbotron">
  <h1>Welcome to Forum Mafia</h1>

  <h2>
    Join other players to play Mafia online!
  </h2>
  <% if user_signed_in? %>
    <%= link_to "My Games", '#', class: "btn btn-lg btn-warning" %>
    <%= link_to "Create Game", '/t/new', class: "btn btn-lg btn-danger" %>
  <% else %>
	<%= link_to "Sign up now!", new_user_registration_path, class: "btn btn-lg btn-info" %>
    <%= link_to "Log in", new_user_session_path, class: "btn btn-lg btn-primary" %>
  <% end %>

</div>

<div class="panel panel-success">
    <div class="panel-heading">
        <%= link_to "New Games", "c/1" %> - Choose a Game and Sign Up!
    </div>
    <div class="panel-body">
        <ul class="list-group">
          <% @all_new.each do |x| %>
            <li class="list-group-item">
              <%= link_to x.title, "t/" + x.id.to_s %>
            </li>
          <% end %>
        </ul>
    </div>
</div>
<div class="panel panel-info">
    <div class="panel-heading">
        <%= link_to "Ongoing Games", "c/2" %>
    </div>
    <div class="panel-body">
        <ul class="list-group">
          <% @all_ongoing.each do |x| %>
            <li class="list-group-item">
              <%= link_to x.title, "t/" + x.id.to_s %>
            </li>
          <% end %>
        </ul>
    </div>
</div>
<div class="panel panel-warning">
    <div class="panel-heading">
        <%= link_to "Free Discussions", "c/0" %>
    </div>
    <div class="panel-body">
        <ul class="list-group">
          <% @all_discussion.each do |x| %>
            <li class="list-group-item">
              <%= link_to x.title, "t/" + x.id.to_s %>
            </li>
          <% end %>
        </ul>
    </div>
</div>